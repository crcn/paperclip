{
  "name": "paperclip",
  "version": "1.0.0",
  "displayName": "Paperclip",
  "description": "Paperclip tooling for VS Code",
  "private": true,
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && cd packages/paperclip/native && cargo fmt",
      "pre-push": "npm run build && npm run test"
    }
  },
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "link": "lerna link",
    "build:watch": "lerna run build:watch --parallel",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "prepublishOnly": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crcn/paperclip.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crcn/paperclip/issues"
  },
  "homepage": "https://github.com/crcn/paperclip#readme",
  "dependencies": {}
}
