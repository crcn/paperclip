{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Paperclip Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}/packages/tandemcode",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/tandemcode"
      ]
    },
    {
      "name": "Paperclip Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}/packages/tandemcode",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/tandemcode",
        "--extensionTestsPath=${workspaceFolder}/packages/tandemcode/lib/test"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/tandemcode/lib/test/**/*-test.js"
      ]
    }
  ]
}
