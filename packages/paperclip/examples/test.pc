<import as="Button" src="./button.pc">

<style> 
  .button {
    font-family: Helvetica;
    display: inline-block;
    border-radius: 10px;
    padding: 10px 20px;
    color: #FFF;
    background: rgb(51, 51, 51);
    &.secondary, &.hover, &:hover {
      color: #333;
      border: 1px solid #333;
      background: transparent;
    }
    & + & {
      margin-left: 8px;
    }
  }
</style>

