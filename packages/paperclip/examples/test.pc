<style> 
  .button {
    font-family: Helvetica;
    display: inline-block;
    border-radius: 10px;
    padding: 10px 20px;
    color: #FFF;
    background: rgb(51, 51, 51);
    &[data-secondary] {
      color: #333;
      border: 1px solid #333;
      background: transparent;
    }
  }
</style>

<!-- components to export -->
<div export component as="Button" data-secondary={secondary} class="button">
  {children}
</div>

