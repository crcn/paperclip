<Topbar export component as="Preview">
  <FileSelect name="super-log-main file that.pc" active={showFileMenu} menu={
    showFileMenu && <FileMenu>
    
      <FileMenuItems>
        <FileMenuItem>
          Buttons.pc
        </FileMenuItem>
        <FileMenuItem>
          Typography.pc
        </FileMenuItem>
        <FileMenuItem>
          Colors.pc
        </FileMenuItem>
        <FileMenuItem hover moreSelect={<MoreFileSelect menu={<MoreFileMenu />}>
          <MoreFileButton />
        </MoreFileSelect>}>
          Super-long-file-name-that-should-wrap-around.png
        </FileMenuItem>
        <FileMenuItem>
          Colors.pc
        </FileMenuItem>
        <FileMenuItem hover>
          Colors.pc
        </FileMenuItem>
        <FileMenuItem>
          Molecules / Select.pc
        </FileMenuItem>
        <FileMenuItem>
          <TextInput />
        </FileMenuItem>
      </FileMenuItems>
      <AddFileMenuItem />
    </FileMenu>
  } />

  <EyeButton />
  <Spacer />

  <UploadButton />

</Topbar>