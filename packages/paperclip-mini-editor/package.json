  "version": "17.4.0",
  "private": false,
  "browser": "browser.js",
  "main": "lib/index.js",
  "scripts": {
    "build": "paperclip build --definition --write && npm run build:web",
    "build:web": "tsc && paperclip build --write && cp src/ui.pc.js src/ui.pc.css src/prism.css lib && mkdir -p dist && cp node_modules/paperclip/dist/* dist",
    "start": "paperclip build --definition --write --watch",
    "build:watch": "paperclip build --definition --write --watch",
    "build:definitions": "paperclip build --definition --write"
  },
  "license": "",
  "dependencies": {
    "fast-memoize": "^2.5.2",
    "paperclip": "^17.4.0",
    "paperclip-web-renderer": "^17.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-simple-code-editor": "^0.11.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@wasm-tool/wasm-pack-plugin": "^1.3.1",
    "css-loader": "^3.6.0",
    "file-loader": "^6.0.0",
    "paperclip-cli": "^17.4.0",
    "paperclip-compiler-react": "^17.4.0",
    "paperclip-loader": "^17.4.0",
    "prism-react-renderer": "^1.1.1",
    "style-loader": "^1.2.1",
    "text-encoding": "^0.7.0",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "wasm-loader": "^1.3.0"
  }
