{
  "scopeName": "text.html.paperclip-html",
  "patterns": [
    {
      "include": "#nodes"
    }
  ],
  "repository": {
    "nodes": {
      "patterns": [
        {
          "include": "#elements"
        },
        {
          "include": "#slots"
        },
        {
          "include": "#blocks"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#entities"
        }
      ]
    },
    "class-pierce": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "keyword.control"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            }
          },
          "match": "(>>>)([^\\s\">{]+)"
        }
      ]
    },
    "attribute": {
      "patterns": [
        {
          "beginCaptures": {
            "1": {
              "name": "keyword.control"
            }
          },
          "end": "(?=\\s*+[^=\\s])",
          "begin": "(component|preview|export)"
        },
        {
          "beginCaptures": {
            "1": {
              "name": "entity.other.attribute-name.html"
            }
          },
          "end": "(?=\\s*+[^=\\s])",
          "begin": "([\\w\\$_\\-]+)",
          "patterns": [
            {
              "include": "#attributes-interior"
            }
          ]
        },
        {
          "include": "#slots"
        }
      ]
    },
    "attributes-interior": {
      "patterns": [
        {
          "beginCaptures": {
            "1": {
              "name": "punctuation.separator.key-value.html"
            }
          },
          "end": "(?<=[^\\s=])(?!\\s*=)|(?=/?>)",
          "begin": "(=)",
          "patterns": [
            {
              "include": "#dynamic-strings"
            },
            {
              "include": "#slots"
            }
          ]
        },
        {
          "include": "#slots"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "punctuation.definition.entity.html"
            },
            "3": {
              "name": "punctuation.definition.entity.html"
            },
            "2": {
              "name": "constant.character.entity.named.$2.html"
            }
          },
          "match": "(&)([^;]+?)(;)"
        }
      ]
    },
    "block-interior": {
      "patterns": [
        {
          "beginCaptures": {
            "1": {
              "name": "keyword.control"
            }
          },
          "end": "(?=})",
          "begin": "(if|each)",
          "patterns": [
            {
              "include": "source.js"
            }
          ],
          "name": "punctuation.definition.comment.html"
        }
      ]
    },
    "dynamic-strings": {
      "patterns": [
        {
          "beginCaptures": {
            "1": {
              "name": "punctuation.separator.key-value.html"
            }
          },
          "end": "\"",
          "begin": "\"",
          "patterns": [
            {
              "include": "#class-pierce"
            },
            {
              "include": "#slots"
            }
          ],
          "name": "string.quoted.double"
        },
        {
          "end": "'",
          "begin": "'",
          "name": "string.quoted.single"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "end": "\"",
          "begin": "\"",
          "name": "string.quoted.double"
        },
        {
          "end": "'",
          "begin": "'",
          "name": "string.quoted.single"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "endCaptures": {
            "1": {
              "name": "punctuation"
            }
          },
          "beginCaptures": {
            "1": {
              "name": "punctuation"
            }
          },
          "end": "(})",
          "begin": "({\\#)",
          "patterns": [
            {
              "include": "#block-interior"
            }
          ]
        },
        {
          "match": "({/})",
          "name": "punctuation"
        },
        {
          "endCaptures": {
            "1": {
              "name": "punctuation"
            }
          },
          "beginCaptures": {
            "3": {
              "name": "keyword.control"
            },
            "2": {
              "name": "punctuation"
            }
          },
          "end": "(})",
          "begin": "(({/)(else)\\s)",
          "patterns": [
            {
              "include": "#block-interior"
            }
          ]
        },
        {
          "captures": {
            "1": {
              "name": "punctuation"
            },
            "3": {
              "name": "punctuation"
            },
            "2": {
              "name": "keyword.control"
            }
          },
          "match": "({/)(else)(})",
          "name": "string.quoted.double"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.comment.html"
            }
          },
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.comment.html"
            }
          },
          "end": "(-->)",
          "begin": "(<!--)",
          "name": "comment.block.html"
        }
      ]
    },
    "slots": {
      "patterns": [
        {
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            }
          },
          "end": "(})",
          "begin": "({(?!#|/))",
          "patterns": [
            {
              "include": "#nodes"
            }
          ]
        }
      ]
    },
    "elements": {
      "patterns": [
        {
          "captures": {
            "4": {
              "name": "punctuation.definition.tag.end.html"
            },
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "3": {
              "patterns": [
                {
                  "include": "#attribute"
                }
              ]
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "match": "(<)(meta|import|input)\\s([^>]*)(>)"
        },
        {
          "contentName": "source.pcss",
          "beginCaptures": {
            "4": {
              "name": "punctuation.definition.tag.end.html"
            },
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "3": {
              "patterns": [
                {
                  "include": "#attribute"
                }
              ]
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(</)(style)(?:\\s*)(>)",
          "begin": "(<)(style)([^>]*)(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            },
            "3": {
              "name": "punctuation.definition.tag.end.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "patterns": [
            {
              "include": "source.pcss"
            }
          ]
        },
        {
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "keyword.control"
            }
          },
          "end": "(/?>)",
          "begin": "(<)(part|placeholder|preview|variant)",
          "patterns": [
            {
              "include": "#attribute"
            }
          ]
        },
        {
          "captures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            },
            "3": {
              "name": "punctuation.definition.tag.end.html"
            },
            "2": {
              "name": "keyword.control"
            }
          },
          "match": "(</)(part|placeholder|preview|variant)(>)"
        },
        {
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(/?>)",
          "begin": "(<)([\\w\\-:]+)",
          "patterns": [
            {
              "include": "#attribute"
            }
          ]
        },
        {
          "captures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            },
            "3": {
              "name": "punctuation.definition.tag.end.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "match": "(</)([\\w\\-:]+)(>)"
        }
      ]
    }
  },
  "fileTypes": [],
  "uuid": "3e3ce414-c385-42ea-a2ba-451a37ca6fd1",
  "name": "Paperclip Template"
}
